<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/transaction_dialog_detail_transaction_view_bottom_border_line_height"
        android:layout_marginBottom="@dimen/transaction_dialog_detail_transaction_view_bottom_border_line_margin_bottom"
        android:background="@color/colorButtonGrey"
        app:layout_constraintBottom_toTopOf="@+id/btn_close_transaction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_close_transaction"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="@dimen/transaction_dialog_detail_transaction_close_button_width"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="@dimen/transaction_dialog_detail_transaction_close_button_margin_horizontal"
        android:layout_marginVertical="@dimen/transaction_dialog_detail_transaction_close_button_margin_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>