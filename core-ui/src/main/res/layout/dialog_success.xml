<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_dialog_success"
        android:layout_width="@dimen/dialog_success_container_layout_width"
        android:layout_height="@dimen/dialog_success_container_layout_height"
        app:cardCornerRadius="@dimen/dialog_success_corner_radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_logo_core_ui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_checklist"
                app:layout_constraintBottom_toTopOf="@+id/tv_title_core_ui"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_title_core_ui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blackCharacterHighEmphasis"
                app:layout_constraintBottom_toTopOf="@+id/tv_desc_core_ui"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="@dimen/dialog_success_container_title_text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_logo_core_ui" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_desc_core_ui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dialog_success_container_desc_text_size"
                android:gravity="center"
                android:textColor="@color/colorBlackCharacterMediumEmphasis"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_core_ui" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>